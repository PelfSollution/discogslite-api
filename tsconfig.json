{
    "compilerOptions": {
      "target": "ES2018",                      
      "module": "commonjs",                    
      "outDir": "./build",                     
      "strict": true,                          
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "preserve"
    },
    "include": [
      "src"
    ]
  }